#include<iostream>
using namespace std;
int main()
{
    float a,b;
    int choice;
    while(1)
    {
        cout<<"Menu :- \n1) Addition \n2) Subtraction \n3) Multiplication \n4) Division \n5) Exit \n";
        cout<<"Enter the value of a and b"<<endl;
        cin>>a>>b;
        cout<<"Enter your choice"<<endl;
        cin>>choice;
        switch(choice)
        {
            case 1: cout<<"Addition of two numbers :"<<(a+b)<<endl;
            break;
             case 2: cout<<"Subtraction of two numbers :"<<(a-b)<<endl;
            break;
             case 3: cout<<"Multiplication of two numbers :"<<(a*b)<<endl;
            break;
             case 4: cout<<"Division of two numbers :"<<(a/b)<<endl;
            break;
            case 5: exit(0);
            default: cout<<"Please enter right choice"<<endl;
        }
    }
    return 0;
}
